  <style>
    @media (max-width: 768px) {
      .hero-section {
        height: 50vh !important;
      }

      .hero-section h1 {
        font-size: 2rem !important;
      }

      .hero-section p {
        font-size: 1rem !important;
      }
    }

    .dog-image,
    .cat-image,
    .bird-image {
      position: absolute;
      top: 0;
      width: 60px;
      opacity: 0.3;
      z-index: 1;
      transition: transform 0.3s ease, opacity 0.3s ease;
    }

    /* hover effect */
    .dog-image:hover,
    .bird-image:hover {
      transform: scale(1.3) rotate(10deg);
      opacity: 0.5;
    }

    .cat-image:hover {
      transform: scale(1.3) rotate(-10deg);
      opacity: 0.5;
    }

    /* dog */
    .dog-image {
      animation: moveDog 12s infinite linear;
    }

    @keyframes moveDog {
      from {
        left: 20%;
      }

      to {
        left: 100%;
      }
    }

    /* cat */
    .cat-image {
      animation: moveCat 12s infinite linear;
    }

    @keyframes moveCat {
      from {
        left: 10%;
      }

      to {
        left: 90%;
      }
    }

    /* bird */
    .bird-image {
      animation: moveBird 12s infinite linear;
    }

    @keyframes moveBird {
      from {
        left: 0;
      }

      to {
        left: 80%;
      }
    }

    .card-hover:hover {
      transform: scale(1.05);
      transition: transform 0.3s ease;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .floating-img {
      transform-origin: center center;
      animation: floatUpDown 3s ease-in-out infinite;

    }

    @keyframes floatUpDown {
      0% {
        transform: translateY(0);
      }

      50% {
        transform: translateY(-15px);
      }

      100% {
        transform: translateY(0);
      }
    }
    .service-btn {
    width: 150px;
    height: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;  /* Controls the size of the text */
    padding: 0;  
    transition: transform 0.3s ease;
    /* Remove any additional padding */
}

.service-btn i {
    font-size: 1rem;  /* Controls the size of the icons */
}
.service-btn:hover {
    transform: scale(1.1); /* Slightly increase the size */
    opacity: 0.9; /* Slight transparency */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Add shadow for a floating effect */
}
    /* pause the float when hovering, then zoom */
    @keyframes floatIn {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

  </style>

</head>

