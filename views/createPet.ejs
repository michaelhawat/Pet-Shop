<html>
<head>
    <title>Create Pet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<style>
.text-danger {
    color: #dc3545;
    background-color: #f8d7da;
    padding: 6px;
    border-radius: 5px;
    margin-top: 4px;
    display: block;
}
</style>

    <%- include("partials/cHeader") %>
    <div class="container">
    <h1>Create Pet</h1>

    <div class="container">
        <form action="/api/pets/create" method="post" id="createPetForm">
            
            <div class="form-group mb-3">
                <label>Name</label>
                <input type="text" name="petName" id="petName" class="form-control" value="">
                <div class="text-danger" id="nameError" style="display: none;">Please enter the pet name</div>
            </div>
            <div class="form-group mb-3">
                <label>Type</label>
                <select name="petType" id="species" class="form-control">
                    <option value="">Select</option>
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                    <option value="Bird">Bird</option>
                </select>
                <div class="text-danger" id="speciesError" style="display: none;">Please select a species</div>
            </div>
            <div class="form-group mb-3">
                <label>Age</label>
                <input type="number" name="age" id="age" class="form-control" value="" min="0" step="1">
                <div class="text-danger" id="ageError" style="display: none;">Please enter a valid age (0 or higher)</div>
            </div>
            <div class="form-group mb-3">
                <label>Vaccinated</label>
                <select name="vaccinated" id="vaccinated" class="form-control">
                    <option value="">Select</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
                <div class="text-danger" id="vaccinatedError" style="display: none;">Please select vaccination status</div>
            </div>
            <div class="form-group mb-3">
                <label>Gender</label>
                <select name="gender" id="gender" class="form-control">
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <div class="text-danger" id="genderError" style="display: none;">Please select pet gender</div>
            </div>
            <div class="form-group mb-3">
                <label>User ID</label>
                <input type="text" name="userId" id="userId" class="form-control" value="">
                <div class="text-danger" id="userIdError" style="display: none;">Please enter the user ID</div>
            </div>
            <button type="submit" class="btn btn-primary">Create Pet</button>
        </form>
    </div>

    <%- include("partials/footer") %>
</div>

<script>
document.getElementById("createPetForm").addEventListener("submit", function (e) {
    let valid = true;

    // Grab values
    const name = document.getElementById("petName").value.trim();
    const species = document.getElementById("species").value.trim();
    const age = document.getElementById("age").value.trim();

    // Hide all previous errors
    document.querySelectorAll(".text-danger").forEach(el => el.style.display = "none");

    if (!name) {
        document.getElementById("nameError").style.display = "block";
        valid = false;
    }

    if (!species) {
        document.getElementById("speciesError").style.display = "block";
        valid = false;
    }

    if (!age || isNaN(age) || Number(age) < 0) {
        document.getElementById("ageError").style.display = "block";
        valid = false;
    }

    if (!valid) {
        e.preventDefault(); // prevent form submission
    }
});
</script>

</body>
</html>

