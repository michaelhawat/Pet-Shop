                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle-fill"></i> Create Pet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>

<script>
document.getElementById("createPetForm").addEventListener("submit", function (e) {
    let valid = true;
    const name = document.getElementById("petName").value.trim();
    const species = document.getElementById("species").value.trim();
    const age = document.getElementById("age").value.trim();
    const vaccinated = document.getElementById("vaccinated").value.trim();
    const gender = document.getElementById("gender").value.trim();
    const userId = document.getElementById("userId").value.trim();

    document.querySelectorAll(".text-danger").forEach(el => el.style.display = "none");

    if (!name) { document.getElementById("nameError").style.display = "block"; valid = false; }
    if (!species) { document.getElementById("speciesError").style.display = "block"; valid = false; }
    if (!age || isNaN(age) || Number(age) < 0) { document.getElementById("ageError").style.display = "block"; valid = false; }
    if (!vaccinated) { document.getElementById("vaccinatedError").style.display = "block"; valid = false; }
    if (!gender) { document.getElementById("genderError").style.display = "block"; valid = false; }
    if (!userId) { document.getElementById("userIdError").style.display = "block"; valid = false; }

    if (!valid) e.preventDefault();
});
</script>

